{% extends 'base.html.twig' %}

{% block title %}Hello APICallController!{% endblock %}

{% block body %}
    <form action="{{ path('call') }}" method="get">
        <label for="song"> type songname or artist</label>
        <input type="text" id="song" name="song">
    </form>
    <ul>
        {%  for song in response %}
        <li><a href=""> {{ song.artist.name }} - {{ song.title }}  </a></li>
            <select id="instrument" name="instrument">
            {% for instrument in song.tabTypes %}
                {% if instrument != "PLAYER" %}
                    <option value="{{ instrument }}">{{ instrument }}</option>
                {% elseif instrument == "PLAYER" and song.tabTypes|length == 1 %}
                    <option value="{{ instrument }}">NO TAB AVAILABLE</option>
                {% endif %}
            {% endfor %}
            </select>
        {% endfor %}
    </ul>
{% endblock %}
